// Replace "admins" check with your logic (e.g., custom claims)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /users/{uid} {
      allow read, update: if isSignedIn() && uid == request.auth.uid;
      allow create: if isSignedIn() && uid == request.auth.uid;
    }

    match /purchases/{doc} {
      // users can read their own; writes only from admins
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /depositRequests/{doc} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow delete, update: if isAdmin();
    }

    match /withdrawRequests/{doc} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow delete, update: if isAdmin();
    }

    match /planSettings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pools/{poolId}/users/{uid} {
      // user can create their own record; admin can read/write
      allow create: if isSignedIn() && uid == request.auth.uid;
      allow read: if isSignedIn();
      allow delete, update: if isAdmin();
    }

    match /adminData/{doc} {
      allow read, write: if isAdmin();
    }
  }
}